{
  "name": "pet-qrb-hardhat",
  "version": "1.0.0",
  "description": "Hardhat node for local blockchain development and testing of QR payment system",
  "main": "index.js",
  "scripts": {
    "start": "npx hardhat node --hostname 0.0.0.0 --port 8545",
    "node": "npx hardhat node --hostname 0.0.0.0 --port 8545",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:ignition": "npx hardhat ignition deploy ignition/modules/QRPaymentContract.js --network localhost"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LloyBit/pet-QRB-hardhat.git"
  },
